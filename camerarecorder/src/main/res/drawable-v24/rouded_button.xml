<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="28dp" />
            <stroke android:width="2dp" android:color="#80D8FF" />
            <gradient android:angle="90" android:startColor="#80D8FF" android:endColor="#00B0FF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="11dp" />
            <stroke android:width="2dp" android:color="#80D8FF" />
            <solid android:color="#00B0FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="11dp" />
            <stroke android:width="2dp" android:color="#80D8FF" />
            <gradient android:angle="-90" android:startColor="#00B0FF" android:endColor="#80D8FF" />
        </shape>
    </item>
</selector>